<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="author" content="Travel">
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/materialize.min.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/material-font.css">
  <!--STYLES END-->
</head>

<body ng-app="TravelApp" ng-controller="signupCtrl" ng-cloak>

  <div class="row">
    <form class="col s12" ng-model="user">
      <div class="row">
        <div class="input-field col s6">
          <input id="first_name" name="firstname" type="text" class="validate" ng-model=user.firstname>
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" name="lastname" type="text" class="validate" ng-model="user.lastname">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" class="validate" ng-model="user.email">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate" ng-model="user.password">
          <label for="password">Password</label>
        </div>
      </div>
      <input type="hidden" id="_csrfid" name="_csrf"  value='<%= _csrf %>'>
      <button class="btn waves-effect waves-light" type="submit" name="action" ng-click="userRegistration(user)">Register
      </button>
    </form>

    <!--login form -->
    <div class="container">
    <div class="row">
        <div class="col m12">
            <h2 class="center-align">Login</h2>
            <div class="row">
                <form class="col s12" ng-model="login">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate" ng-model="login.email">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="pass" type="password" class="validate" ng-model="login.password">
                            <label for="pass">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input type="checkbox" id="remember">
                                <label for="remember">Remember me</label>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m12">
                            <p class="right-align">
                                <button class="btn btn-large waves-effect waves-light" type="button" name="action" ng-click="signin(login)">Login</button>
                            </p>
                        </div>
                    </div>
                </form>
                <button type="button" ng-click="socialLogin()" class="btn btn-default navbar-btn">
                    Login
                </button>
                <div id="fb-root">
        </div>

            </div>
        </div>
    </div>
</div>
  </div>

  <!--SCRIPTS-->
  <!--You can check the script here -->
  <script src="/js/dependencies/sails.io.js"></script>
  <script src="/js/dependencies/angular.min.js"></script>
  <script src="/js/dependencies/angualr-route.min.js"></script>
  <script src="/js/dependencies/angular-cookie.min.js"></script>
  <script src="/js/dependencies/jqury-2.2.4.min.js"></script>
  <script src="/js/dependencies/materialize.min.js"></script>
  <script src="/js/dependencies/ngFacebook.js"></script>
  <script src="/js/public/Travel/AppModule.js"></script>
  <script src="/js/public/Travel/Controllers/signupCtrl.js"></script>
  <script src="/js/public/Travel/Factory/userFactory.js"></script>
  <script src="/js/public/Travel/Services/cookieService.js"></script>
  <script src="/js/public/Travel/Services/loginServices.js"></script>
  <script src="/js/public/Travel/Services/oAuthService.js"></script>
  <script src="/js/public/Travel/Services/usernameProperty.js"></script>
  <!--SCRIPTS END-->
</body>

</html>
